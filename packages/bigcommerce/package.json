{
  "name": "@local/utils",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*/index.ts"
  },
  "main": "dist/plugin.system.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "clean": "rm -rf .turbo node_modules",
    "dev": "webpack-dev-server --mode development",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate": "pnpm run \"/generate:/\"",
    "generate:products_catalog.v3": "openapi-typescript https://raw.githubusercontent.com/bigcommerce/docs/main/reference/catalog/products_catalog.v3.yml -o src/types/products_catalog.v3.d.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@local/prettier-config",
  "eslintConfig": {
    "extends": [
      "@local/eslint-config/base"
    ],
    "ignorePatterns": [
      "./src/types/*"
    ],
    "root": true
  },
  "dependencies": {
    "@builder.io/plugin-tools": "^0.0.3",
    "openapi-fetch": "^0.9.8"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.7",
    "@builder.io/app-context": "^1.0.0",
    "@local/eslint-config": "workspace:*",
    "@local/prettier-config": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@types/node": "^20.14.15",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "openapi-typescript": "^6.7.6",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "entry": "plugin.ts",
  "output": "plugin.system.js"
}
